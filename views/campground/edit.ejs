<% include ../partials/header %>

<h1 class="text-center my-4">Edit CampGround</h1>
<div class="container w-25 mx-aut0"> 
<form class="mt-2" method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
    <input class="form-control form-group" type="text" name="Campground[name]" value="<%= campground.name %>">
    <input class="form-control form-group" type="text" name="Campground[image]" value="<%= campground.image %>">
    <input class="form-control form-group" type="number" name="Campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
    <input class="form-control form-group" type="text" name="Campground[description]" value="<%= campground.description %>">
    <button type"submit" class="btn btn-primary btn-block">Submit</button>
</form>
<br>
<a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>